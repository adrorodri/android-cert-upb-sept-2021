<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CocinaYa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SplashTheme" parent="Theme.CocinaYa">
        <item name="colorSurface">@color/almost_black</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>

    <style name="LoginTheme" parent="Theme.CocinaYa">
        <item name="colorSurface">@color/almost_black</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorPrimarySurface">@color/gray</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>
</resources>